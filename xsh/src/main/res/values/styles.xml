<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="alliance_linkstore_item_layout_style">
        <item name="android:layout_marginLeft">@dimen/alliance_linkstore_item_margin_left</item>
        <item name="android:layout_marginStart">@dimen/alliance_linkstore_item_margin_left</item>
        <item name="android:layout_marginRight">@dimen/alliance_linkstore_item_margin_right</item>
        <item name="android:layout_marginEnd">@dimen/alliance_linkstore_item_margin_right</item>
        <item name="android:background">@drawable/alliance_linkma_item_bg_white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="alliance_linkstore_item_layout_padding_bottom_style">
        <item name="android:paddingBottom">@dimen/alliance_linkstore_item_pading_bottom</item>
        <item name="android:layout_marginLeft">@dimen/alliance_linkstore_item_margin_left</item>
        <item name="android:layout_marginStart">@dimen/alliance_linkstore_item_margin_left</item>
        <item name="android:layout_marginRight">@dimen/alliance_linkstore_item_margin_right</item>
        <item name="android:layout_marginEnd">@dimen/alliance_linkstore_item_margin_right</item>
        <item name="android:background">@drawable/alliance_linkma_item_bg_white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="alliance_linkstore_item_seperator_line">
        <item name="android:layout_marginLeft">@dimen/alliance_linkstore_item_text_margin</item>
        <item name="android:layout_marginStart">@dimen/alliance_linkstore_item_text_margin</item>
        <item name="android:layout_marginRight">@dimen/alliance_linkstore_item_text_margin</item>
        <item name="android:layout_marginEnd">@dimen/alliance_linkstore_item_text_margin</item>
        <item name="android:background">@color/linkstore_item_seperator_line_color</item>
    </style>

    <style name="alliance_linkstore_item_label_style">
        <item name="android:textColor">@color/linkstore_item_text_label_color</item>
        <item name="android:textSize">@dimen/alliance_linkstore_item_label_text_size</item>
    </style>

    <style name="alliance_linkstore_item_value_style">
        <item name="android:textColor">@color/linkstore_item_text_value_color</item>
        <item name="android:textSize">@dimen/alliance_linkstore_item_label_text_size</item>
    </style>

    <style name="transparentBgDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AlertDialog.AppCompat.Light." parent="android:Theme.Black.NoTitleBar.Fullscreen"/>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!-- 对话框动画 -->
    <style name="dialogStyleAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_dismiss</item>
    </style>

    <style name="jc_style_dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/jc_dialog_progress_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/jc_popup_toast_anim</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="jc_popup_toast_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="jc_vertical_progressBar">
        <item name="android:maxWidth">12.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/jc_volume_progress_bg</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">1.0dip</item>
    </style>
</resources>