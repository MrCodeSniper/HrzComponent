<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/css_pub_dialog_round"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/view_sp_size_20"
        android:paddingTop="@dimen/view_sp_size_20"
        android:textColor="@color/theam_color"
        android:textSize="@dimen/txt_sp_size_36" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/view_sp_size_2"
        android:layout_marginTop="@dimen/view_sp_size_20"
        android:background="@color/theam_color" />

    <ImageView
        android:id="@+id/imageview_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_sp_size_160"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/view_sp_size_20"
        android:layout_marginRight="@dimen/view_sp_size_20"
        android:layout_marginBottom="@dimen/view_sp_size_20"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_sp_size_32" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/view_sp_size_2"
        android:layout_marginTop="@dimen/view_sp_size_20"
        android:background="@color/gray_f1" />

    <LinearLayout
        android:id="@+id/two_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/view_sp_size_100"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/css_cancel_btn_selector"
            android:gravity="center"
            android:textColor="@color/gray_23"
            android:textSize="@dimen/txt_sp_size_36" />

        <View
            android:layout_width="@dimen/view_sp_size_2"
            android:layout_height="match_parent"
            android:background="@color/gray_f1" />

        <TextView
            android:id="@+id/yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/css_confirm_btn_selector"
            android:gravity="center"
            android:textColor="@color/gray_23"
            android:textSize="@dimen/txt_sp_size_36" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/one_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/view_sp_size_100"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/css_cancel_btn_selector"
            android:gravity="center"
            android:textColor="@color/gray_23"
            android:textSize="@dimen/txt_sp_size_36" />
    </LinearLayout>

</LinearLayout>