<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >



    <RelativeLayout
         android:layout_width="250dp"
        android:background="@drawable/img_ticket"
        android:layout_height="98dp">




        <TextView
            android:id="@+id/tv_redbag_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FF9225"
            android:layout_marginLeft="12dp"
            android:paddingTop="10dp"
            android:layout_marginTop="2dp"
            android:text="￥3.00 无门槛红包"
            />


        <TextView
            android:id="@+id/tv_redbag_limit"
            android:layout_alignParentBottom="true"
            android:layout_margin="12dp"
            android:textSize="12sp"
            android:textColor="#CCFF9225"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仅限本店使用 | 仅限新人使用\n
2018.06.01~2018.06.20"
            />






        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="立即\n领取"
            android:layout_marginRight="22dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="#ffff9225"
            android:textSize="16sp"
            />





    </RelativeLayout>







</LinearLayout>