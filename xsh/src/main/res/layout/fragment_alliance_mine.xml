<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:id="@+id/rl_titlebar"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:id="@+id/tv_titlebar"
            android:gravity="center"
            android:text="我的"
            android:layout_centerInParent="true"
            android:textSize="19sp"
            android:textColor="#333"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f4f4f4"
            />


    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#f4f4f4"
        android:layout_height="match_parent">



        <RelativeLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_user_icon"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="12dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="#ececec"
                />


            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:text="用户昵称"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_user_icon"
                android:layout_height="wrap_content" />



            <LinearLayout
                android:id="@+id/ll_scan_bg"
                android:background="@drawable/btn_scan_style"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="76dp"
                android:layout_height="29dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scan_icon"
                    />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫一扫"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    />






            </LinearLayout>











        </RelativeLayout>







        <RelativeLayout
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="#333"
                android:text="我的卡券"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#b2b2b2"
                android:layout_toLeftOf="@+id/iv_enter_mark"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:text="更多"
                />


            <ImageView
                android:id="@+id/iv_enter_mark"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_alliance_enter_mark"
                />



        </RelativeLayout>


        <RelativeLayout
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="#333"
                android:text="我的订单"
                android:layout_height="wrap_content" />

            <ImageView

                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_alliance_enter_mark"
                />



        </RelativeLayout>




        <RelativeLayout
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="#333"
                android:text="客服"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_alliance_enter_mark"
                />



        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ececec" />

        <RelativeLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="#333"
                android:text="关于享少花"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_alliance_enter_mark"
                />



        </RelativeLayout>






  </LinearLayout>



    </android.support.v4.widget.NestedScrollView>




</LinearLayout>