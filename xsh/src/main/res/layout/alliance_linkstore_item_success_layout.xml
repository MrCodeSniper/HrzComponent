<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/alliance_linkstore_item_margin_bottom">

    <ImageView
        android:id="@+id/alliance_linkstore_item_banner_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/alliance_linkstore_item_layout_padding_bottom_style">

        <include layout="@layout/alliance_linkstore_store_info_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/alliance_linkstore_item_text_margin"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="审核情况"
                style="@style/alliance_linkstore_item_label_style"
                />

            <TextView
                android:id="@+id/alliance_linkstore_item_verify_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核通过"
                style="@style/alliance_linkstore_item_value_style"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/alliance_linkstore_item_seperator_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/alliance_linkstore_item_text_margin"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="佣金"
                style="@style/alliance_linkstore_item_label_style"
                />

            <TextView
                android:id="@+id/alliance_linkstore_item_income_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15%"
                style="@style/alliance_linkstore_item_value_style"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/alliance_linkstore_item_seperator_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/alliance_linkstore_item_income_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/linkstore_item_text_color_yellow"
                    android:textSize="@dimen/alliance_linkstore_item_income_text_size"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计收益(元)"
                    android:textColor="@color/linkstore_item_text_label_color"
                    android:textSize="@dimen/alliance_linkstore_item_income_label_size"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/alliance_linkstore_item_income_est"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/linkstore_item_text_value_color"
                    android:textSize="@dimen/alliance_linkstore_item_income_text_size"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预计收益(元)"
                    android:textColor="@color/linkstore_item_text_label_color"
                    android:textSize="@dimen/alliance_linkstore_item_income_label_size"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/alliance_linkstore_item_income_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/linkstore_item_text_value_color"
                    android:textSize="@dimen/alliance_linkstore_item_income_text_size"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日入账(元)"
                    android:textColor="@color/linkstore_item_text_label_color"
                    android:textSize="@dimen/alliance_linkstore_item_income_label_size"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/alliance_linkstore_item_view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="查看明细"
            android:textStyle="bold"
            android:paddingTop="@dimen/alliance_linkstore_item_btn_padding_top"
            android:paddingBottom="@dimen/alliance_linkstore_item_btn_padding_top"
            android:paddingLeft="@dimen/alliance_linkstore_item_btn_padding_left"
            android:paddingStart="@dimen/alliance_linkstore_item_btn_padding_left"
            android:paddingEnd="@dimen/alliance_linkstore_item_btn_padding_left"
            android:paddingRight="@dimen/alliance_linkstore_item_btn_padding_left"
            android:textColor="@color/linkstore_item_text_color_yellow"
            android:textSize="15sp"
            android:background="@drawable/alliance_btn_bg_yellow_line"/>

    </LinearLayout>
</RelativeLayout>
