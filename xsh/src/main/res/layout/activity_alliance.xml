<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    >




    <com.mujirenben.android.common.widget.tablayout.CommonTabLayout
        android:visibility="gone"
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#ffffff"
        tl:tl_iconHeight="27dp"
        tl:tl_iconWidth="27dp"
        android:layout_alignParentBottom="true"
        tl:tl_indicator_color="#2C97DE"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="#FFB037"
        tl:tl_textUnselectColor="#929292"
        tl:tl_textsize="10sp"
        tl:tl_underline_color="#DDDDDD"
        tl:tl_underline_height="0dp"/>

    <com.hdyl.alliance.widget.NoScrollViewPager
        android:layout_above="@id/tab"
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>