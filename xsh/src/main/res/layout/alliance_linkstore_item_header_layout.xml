<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/alliance_item_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/alliance_linkman_banner_top"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_buy"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:text="购买商家收款二维码"
        android:textColor="@color/black_40"
        android:paddingTop="10dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:background="@drawable/alliance_item_bg_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:visibility="gone"
        android:paddingTop="30dp"
        android:background="#f4f4f4"
        android:id="@+id/rl_nomore"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/datastatus"
            android:text="暂无数据"
            android:drawableTop="@drawable/no_data_icon"
            android:textColor="@color/black_40"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>




</LinearLayout>