<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="0.5dp"
    android:id="@+id/rl_recommend_menu"
    android:layout_height="wrap_content">

     <View
         android:layout_alignParentTop="true"
         android:background="@color/module_divide_color"
         android:layout_width="match_parent"
         android:layout_height="0.5dp"></View>


     <ImageView

         android:visibility="gone"
         android:layout_marginTop="16dp"
         android:layout_marginLeft="12dp"
         android:id="@+id/iv_ticket_1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:scaleType="fitXY"
         android:src="@drawable/icon_like"
         />



     <RelativeLayout
         android:layout_marginTop="15dp"
         android:layout_marginLeft="12dp"
         android:id="@+id/iv_ticket"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

          <View
              android:id="@+id/view_tag"
              android:layout_width="4dp"
              android:layout_centerVertical="true"
              android:layout_marginTop="1dp"
              android:layout_height="16dp"
              android:background="@drawable/alliance_shopdetail_left_tab"></View>



          <TextView
              android:layout_centerVertical="true"
              android:layout_marginLeft="8dp"
              android:layout_toRightOf="@id/view_tag"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18sp"
              android:textColor="#333"
              android:text="推荐商品"
              />


     </RelativeLayout>
     


     <ImageView
         android:visibility="gone"
         android:id="@+id/iv_enter"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_marginTop="16dp"
         android:layout_marginRight="12dp"
         android:src="@drawable/icon_enter"
         android:textColor="#fff"
         android:textSize="14sp" />

     <TextView
         android:visibility="gone"
         android:layout_toLeftOf="@id/iv_enter"
         android:layout_marginTop="14dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginRight="5dp"
         android:text="更多"
         android:textColor="#b2b2b2"
         android:textSize="12sp" />





     <HorizontalScrollView
         android:scrollbars="none"
         android:layout_below="@id/iv_ticket"
         android:id="@+id/horizontal_shop_pics"
         android:layout_marginTop="12dp"
         android:layout_marginBottom="14dp"
         android:background="@null"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">


          <LinearLayout
              android:id="@+id/ll_shop_menu"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
          </LinearLayout>

     </HorizontalScrollView>













</RelativeLayout>