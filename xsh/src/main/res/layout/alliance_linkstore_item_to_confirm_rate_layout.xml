<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/alliance_linkstore_item_margin_bottom">

    <ImageView
        android:id="@+id/alliance_linkstore_item_banner_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/alliance_linkstore_item_layout_padding_bottom_style">

        <include layout="@layout/alliance_linkstore_store_info_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/alliance_linkstore_item_text_margin"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="审核情况"
                style="@style/alliance_linkstore_item_label_style"
                />

            <TextView
                android:id="@+id/alliance_linkstore_item_verify_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核通过"
                style="@style/alliance_linkstore_item_value_style"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/alliance_linkstore_item_seperator_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/alliance_linkstore_item_text_margin"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="佣金"
                style="@style/alliance_linkstore_item_label_style"
                />

            <TextView
                android:id="@+id/alliance_linkstore_item_income_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15%"
                style="@style/alliance_linkstore_item_value_style"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/alliance_linkstore_item_seperator_line"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/alliance_linkstore_item_text_margin"
            android:layout_marginStart="@dimen/alliance_linkstore_item_text_margin"
            android:layout_marginRight="@dimen/alliance_linkstore_item_text_margin"
            android:layout_marginEnd="@dimen/alliance_linkstore_item_text_margin"
            android:text="请确认佣金是否与协商一致，如一致请点击“确认佣金 如“驳回佣金”，商家需重新提交入驻申请"
            android:textColor="@color/linkstore_item_text_label_color"
            android:textSize="11sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/alliance_linkstore_item_confirm_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认佣金"
                android:textStyle="bold"
                android:paddingTop="@dimen/alliance_linkstore_item_btn_padding_top"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/alliance_linkstore_item_btn_padding_left"
                android:paddingStart="@dimen/alliance_linkstore_item_btn_padding_left"
                android:paddingEnd="@dimen/alliance_linkstore_item_btn_padding_left"
                android:paddingRight="@dimen/alliance_linkstore_item_btn_padding_left"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:background="@drawable/alliance_btn_bg_yellow_normal"/>

            <TextView
                android:id="@+id/alliance_linkstore_item_refuse_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="驳回佣金"
                android:textStyle="bold"
                android:paddingTop="@dimen/alliance_linkstore_item_btn_padding_top"
                android:paddingBottom="@dimen/alliance_linkstore_item_btn_padding_top"
                android:paddingLeft="@dimen/alliance_linkstore_item_btn_padding_left"
                android:paddingStart="@dimen/alliance_linkstore_item_btn_padding_left"
                android:paddingEnd="@dimen/alliance_linkstore_item_btn_padding_left"
                android:paddingRight="@dimen/alliance_linkstore_item_btn_padding_left"
                android:textColor="@color/linkstore_item_text_color_yellow"
                android:textSize="15sp"
                android:background="@drawable/alliance_btn_bg_yellow_line"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
