<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


            <TextView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textColor="@color/black_40"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                />

         <LinearLayout
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:paddingTop="10dp"
             android:paddingBottom="10dp"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/tv_copy_text"
                 android:text="复制文案"
                 android:visibility="gone"
                 android:textColor="@color/black"
                 android:drawableTop="@drawable/hrz_buildactivity_coyp_text"
                 android:drawablePadding="10dp"
                 android:layout_width="0dp"
                 android:gravity="center"
                 android:layout_weight="1"
                 android:layout_height="wrap_content" />
             <TextView
                 android:id="@+id/tv_wxchat"
                 android:text="微信好友"
                 android:textColor="@color/black"
                 android:drawableTop="@drawable/hrz_fragment_wx"
                 android:drawablePadding="10dp"
                 android:layout_width="0dp"
                 android:gravity="center"
                 android:layout_weight="1"
                 android:layout_height="wrap_content" />
             <TextView
                 android:id="@+id/tv_wxfriend"
                 android:text="微信朋友圈"
                 android:textColor="@color/black"
                 android:drawableTop="@drawable/hrz_activity_wxq"
                 android:drawablePadding="10dp"
                 android:layout_width="0dp"
                 android:gravity="center"
                 android:layout_weight="1"
                 android:layout_height="wrap_content" />
         </LinearLayout>
         <TextView
             android:id="@+id/tv_cancel"
             android:text="取消"
             android:gravity="center"
             android:padding="15dp"
             android:background="#faf8f8"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />


    </LinearLayout>
</RelativeLayout>