<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="0.5dp"
    android:id="@+id/rl_recommend_ticket"
    android:layout_height="wrap_content">



     <View
         android:layout_alignParentTop="true"
         android:background="@color/module_divide_color"
         android:layout_width="match_parent"
         android:layout_height="0.5dp"></View>



     <ImageView
         android:layout_marginTop="16dp"
         android:layout_marginLeft="12dp"
         android:id="@+id/iv_ticket1"
         android:visibility="gone"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:scaleType="fitXY"
         android:src="@drawable/icon_stamp"
         />


     <LinearLayout
         android:gravity="center_vertical"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="12dp"
         android:id="@+id/iv_ticket"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

          <View
              android:layout_gravity="center_vertical"
              android:layout_width="4dp"
              android:id="@+id/iv_tickets"
              android:layout_marginTop="1dp"
              android:layout_height="16dp"
              android:background="@drawable/alliance_shopdetail_left_tab"
              ></View>


          <TextView
              android:layout_marginLeft="8dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18sp"
              android:textColor="#333"
              android:layout_gravity="center"
              android:gravity="center_vertical"
              android:text="通用优惠券"
              />


     </LinearLayout>



     <TextView
         android:visibility="gone"
         android:layout_alignTop="@id/iv_ticket"
         android:layout_alignParentRight="true"
         android:gravity="center"
         android:background="@drawable/btn_get_ticket"
         android:layout_width="92dp"
         android:layout_marginRight="12dp"
         android:layout_height="28dp"
         android:text="立即领取"
         android:textSize="14sp"
         android:textColor="#fff"
         />

     <TextView
         android:visibility="gone"
         android:layout_alignTop="@id/iv_ticket"
         android:layout_alignParentRight="true"
         android:id="@+id/tv_limit"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="14sp"
         android:textColor="#b2b2b2"
         android:layout_marginRight="12dp"
         android:text="仅限本店使用 | 06.01~06.20"
         />



     <HorizontalScrollView
         android:scrollbars="none"
         android:layout_below="@id/iv_ticket"
         android:id="@+id/horizontal_shop_pics"
         android:layout_marginTop="14dp"
         android:layout_marginBottom="16dp"
         android:background="@null"
         android:layout_width="match_parent"
         android:layout_height="98dp">


          <LinearLayout
              android:id="@+id/ll_shop_tickets"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
          </LinearLayout>

     </HorizontalScrollView>













</RelativeLayout>