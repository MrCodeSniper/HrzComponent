<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">




<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_margin="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hrz_me_fensi_icon"
            android:layout_marginTop="20dp"

            />




    </RelativeLayout>


    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/hrz_activity_jd_icon"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="18dp"
                android:text="超级拖鞋 超级拖超级拖超级拖超级拖超级拖"
                android:textColor="#333"
                android:textSize="14sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/money_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:text="￥58元"
            android:textColor="@color/color_orange_red"
            android:textSize="20sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="淘宝价   ￥99"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">







        <TextView
            android:id="@+id/tv_earn"
            android:background="@drawable/hrz_activity_small_bg"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="分享赚￥10.99"
            />



        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月销 1000"
            android:textSize="12sp"


            />



        <TextView
            android:layout_marginLeft="30dp"
            android:background="@drawable/hrz_activity_small_bg"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="券￥3.66"
            />


    </LinearLayout>







        </LinearLayout>


    <View
    android:background="#eee"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"/>

</LinearLayout>