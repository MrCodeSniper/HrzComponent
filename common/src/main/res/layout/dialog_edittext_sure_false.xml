<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="280dp"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_round_white_5dp"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingTop="10dp">



    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_title"
        android:text="填写昵称"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_round_gray_bored"
        android:ems="10"
        android:hint="请输入您的昵称(不超过10个字数）"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textSize="@dimen/module_textsize_14sp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color_blur"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="11dp"
        android:background="@color/module_divide_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_color"
            android:textSize="@dimen/module_textsize_14sp"/>

        <TextView
            android:enabled="false"
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="完成"
            android:background="@drawable/check_selector"
            android:textColor="@color/white"
            android:textSize="@dimen/module_textsize_14sp"/>



    </LinearLayout>
</LinearLayout>
