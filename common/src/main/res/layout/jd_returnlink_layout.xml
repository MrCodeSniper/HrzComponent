<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:clipChildren="false"
    android:background="@color/transparent"
    android:layout_height="wrap_content">


<com.gcssloop.widget.RCRelativeLayout
    android:layout_marginTop="20dp"
   android:layout_width="280dp"
    android:clipChildren="false"
    android:background="@color/transparent"
    android:layout_height="156dp">







    <com.gcssloop.widget.RCRelativeLayout

        android:background="@color/white"
        android:layout_width="280dp"
        android:layout_height="135dp">


        <TextView
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="38dp"
            android:id="@+id/tv_agreement"
            android:text="为保障您的愉快购物，请在购买京东商品仔细阅读《购买须知》"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:includeFontPadding="false"
            android:textColor="@color/text_color"
            android:layout_height="wrap_content" />



        <View
            android:layout_above="@+id/ll_bottom_tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/module_divide_line_height"
            android:background="@color/module_divide_color"
            ></View>


        <LinearLayout
            android:id="@+id/ll_bottom_tabs"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">

        <TextView
            android:gravity="center"
            android:id="@+id/tv_cancel_dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:text="取消"
            />


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/module_divide_color"
            ></View>

        <TextView
            android:gravity="center"
            android:id="@+id/tv_agree_dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/main_color"
            android:text="去阅读"
            />

        </LinearLayout>


    </com.gcssloop.widget.RCRelativeLayout>















</com.gcssloop.widget.RCRelativeLayout>


    <ImageView

        android:layout_gravity="center_horizontal"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:src="@drawable/jd_dialog_icon" />

</FrameLayout>