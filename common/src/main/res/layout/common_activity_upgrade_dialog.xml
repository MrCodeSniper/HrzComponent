<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:layout_height="wrap_content">



<RelativeLayout
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:layout_width="257dp"
    android:layout_height="96dp">


   <TextView
       android:includeFontPadding="false"
       android:id="@+id/tv_title_bar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="正在下载升级，请稍候..."
       android:textSize="16sp"
       android:layout_marginTop="18dp"
       android:layout_centerHorizontal="true"
       android:textColor="@color/text_color"
       />

    
    <View
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/common_radius_bar_3dp_gradient"
        android:layout_below="@id/tv_title_bar"
        android:layout_width="195dp"
        android:layout_height="5dp"/>


    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_below="@id/tv_title_bar"
        android:background="#ececec"
        android:id="@+id/pb_dowload_new_apk"
        android:layout_width="195dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:progressDrawable="@drawable/pb_upgrade"
        android:maxHeight="5dp"
        android:minHeight="5dp"
       />





    <TextView
        android:id="@+id/tv_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F73E71"
        android:text="0%"
        android:includeFontPadding="false"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pb_dowload_new_apk"
        />









</RelativeLayout>

</RelativeLayout>