<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >

        <ImageView
            android:id="@+id/iv_close_dialog"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_icon_dialog"
            />


        <com.mujirenben.android.common.widget.imagview.XCRoundRectImageView
            android:layout_width="@dimen/module_goodsdetail_dialog_spec_goodsimage_wh"
            android:id="@+id/iv_goods"
            android:layout_height="@dimen/module_goodsdetail_dialog_spec_goodsimage_wh"
           ></com.mujirenben.android.common.widget.imagview.XCRoundRectImageView>


        <LinearLayout
            android:layout_toRightOf="@+id/iv_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/module_goodsdetail_dialog_spec_price_marginleft"
            android:layout_marginTop="@dimen/module_goodsdetail_dialog_spec_price_margintop"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_restamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/module_goodsdetail_dialog_marginsize"
                android:text="库存2365件"
                android:textColor="@color/text_color"
                android:textSize="@dimen/module_textsize_14sp"

                />

            <TextView
                android:id="@+id/tv_goods_spec_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/module_goodsdetail_dialog_marginsize"
                android:text="请选择商品参数"
                android:textColor="@color/text_color"
                android:textSize="@dimen/module_textsize_14sp"

                />


        </LinearLayout>


    </RelativeLayout>


    <include layout="@layout/module_include_common_dividebar" />

   <LinearLayout
       android:id="@+id/ll_spec_type_container"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">



   </LinearLayout>



    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textColor="@color/text_color"
            android:textSize="@dimen/module_textsize_14sp" />


        <RelativeLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <TextView
                android:layout_alignTop="@+id/tv_spec_number"
                android:id="@+id/tv_number_reduce"
                android:gravity="center"
                android:textSize="16dp"
                android:text="-"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/module_goodsdetail_dialog_number"
                />


            <TextView
                android:id="@+id/tv_spec_number"
                android:layout_toRightOf="@+id/tv_number_reduce"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="@color/text_color"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@color/bg_grey"
                />


            <TextView
                android:id="@+id/tv_number_plus"
                android:layout_alignTop="@+id/tv_spec_number"
                android:layout_toRightOf="@+id/tv_spec_number"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:textSize="16dp"
                android:text="+"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/module_goodsdetail_dialog_number_plus"
                />



        </RelativeLayout>




    </LinearLayout>









        <TextView
            android:id="@+id/tv_buy"
            android:layout_marginTop="76dp"
            android:gravity="center"
            android:text="立即购买"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_height="54dp"
            android:background="@drawable/goods_detail_buy_bg"
            />
















</LinearLayout>