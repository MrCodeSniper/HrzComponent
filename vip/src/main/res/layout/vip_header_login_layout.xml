<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/vip_header_login_user_info_layout"/>
    </FrameLayout>
    <ImageView
        android:layout_marginTop="14dp"
        android:id="@+id/vip_header_login_update_layout_iv"
        android:layout_width="match_parent"
        android:src="@drawable/make_incom_crown_bg"
        android:layout_height="wrap_content" />
    <include
        android:visibility="gone"
        layout="@layout/vip_header_login_vip_school_layout"/>
    <include
        layout="@layout/vip_header_activity_layout"/>
</LinearLayout>