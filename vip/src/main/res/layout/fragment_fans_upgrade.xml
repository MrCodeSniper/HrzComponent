<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.fragment.FansUpgradeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_yaowan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="升级方式二选一"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_upgrade_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:background="#FFF0BB"
                            android:paddingLeft="59dp"
                            android:text="累积邀请--个完成首次购物的粉丝"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_gain_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="20dp"
                                android:text="免费升级为皇冠, 多赚--元"
                                android:textColor="#CC9C2D"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|bottom"
                                android:layout_marginRight="20dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_current"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textColor="#333333"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/--"
                                    android:textColor="#333333"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </FrameLayout>

                        <ProgressBar
                            android:id="@+id/pb_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginTop="12dp"
                            android:max="20"
                            android:paddingLeft="19dp"
                            android:paddingRight="19dp"
                            android:progress="0"
                            android:progressDrawable="@drawable/upgrade_progress" />

                        <TextView
                            android:id="@+id/tv_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:text="已培养首购粉丝--个，距离免费升级还差--个"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_invite"
                            android:layout_width="319dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/light_yellow_gradient_bg"
                            android:clickable="true"
                            android:gravity="center"
                            android:longClickable="true"
                            android:text="立即去邀请"
                            android:textColor="#171E4B"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="26dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/vip_number_1"
                    android:elevation="100dp"
                    android:textColor="#CAA54F"
                    android:textSize="56dp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="7dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:background="#FFF0BB"
                            android:paddingLeft="59dp"
                            android:text="升级独享皇冠大礼包"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="28dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/icon_crown_privilege_1" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    android:text="皇冠专享特权带你挣更多" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="32dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/icon_crown_privilege_2" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    android:text="价值688元皇冠独家课程" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="32dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/icon_crown_privilege_3" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    android:text="价值198元皇冠纪念品" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_upgrade_1"
                            android:layout_width="319dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/light_yellow_gradient_bg"
                            android:clickable="true"
                            android:gravity="center"
                            android:longClickable="true"
                            android:text="立即去升级"
                            android:textColor="#171E4B"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="36dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/vip_number_2"
                    android:elevation="100dp"
                    android:textColor="#CAA54F"
                    android:textSize="56dp"
                    android:textStyle="bold" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_yaowan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="皇冠特权说明"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="分佣比例大幅提升" />
            </LinearLayout>

            <com.mujirenben.vip.mvp.ui.widget.ResizableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/fans_upgrade_privilege" />

            <LinearLayout
                android:id="@+id/ll_privileges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="36dp"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/tv_upgrade_2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFD74A"
                android:clickable="true"
                android:gravity="center"
                android:longClickable="true"
                android:text="立即升级"
                android:textColor="#171E4B"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>