<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/vip_shop_item_iv"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:layout_width="78dp"
        android:layout_height="78dp" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vip_shop_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="店家名称名称名称名称名称名称称..."
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/vip_shop_item_type_tv"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="商铺类型"
                android:textColor="#ffb2b2b2"
                android:textSize="13sp" />

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/vip_shop_item_dis_tv"
                android:layout_width="33dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="6.3km"
                android:textColor="#ffb2b2b2"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="人均￥142"
                android:layout_marginTop="8dp"
                android:id="@+id/vip_shop_item_per_tv"
                android:layout_width="wrap_content"
                android:textColor="#333333"
                android:layout_height="wrap_content"
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="-2dp"
                android:id="@+id/vip_shop_item_sale_tv"
                android:text="省5%"
                android:background="@drawable/round_bubble_bg"
                android:layout_marginLeft="8dp"
                android:gravity="top"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>