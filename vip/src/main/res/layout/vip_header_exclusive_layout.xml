<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_grey"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:src="@drawable/exclusive_icon_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal"
                android:text="@string/vip_vip_exclusive_text"
                android:textColor="@color/golden_deep_color"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:text="@string/vip_beer_fun_text"
            android:textColor="@color/text_color_blur"
            android:textSize="12sp" />

        <include
            android:visibility="gone"
            layout="@layout/vip_header_specific_tab_layout"
            android:id="@+id/vip_header_specific_tab_layout"/>
    </LinearLayout>
</FrameLayout>