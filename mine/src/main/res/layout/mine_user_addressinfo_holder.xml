<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="8dp"
    android:id="@+id/ll_ship_above"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_click_area_one"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_user_ship_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="@color/text_color"
            />


        <TextView
            android:id="@+id/tv_user_ship_phone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="@color/text_color"
            />






    </RelativeLayout>







    <TextView
        android:id="@+id/tv_ship_address_detail"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:textColor="@color/text_color_blur"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/module_divide_color"
        />



    <RelativeLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">


        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_default_address_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mine_default_address_selector"
            />


        <TextView
            android:id="@+id/tv_set_default_ship_address"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_default_address_select"
            android:text="设为默认地址"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tv_edit_user_ship"
            android:text="编辑"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            />


        <TextView
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tv_edit_user_ship"
            android:id="@+id/tv_delete_user_ship"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            />


    </RelativeLayout>





</LinearLayout>