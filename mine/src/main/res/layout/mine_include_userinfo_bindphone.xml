<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="8dp"
    android:id="@+id/mine_enter_phone_layout"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mine_userinfo_bind_phone"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:includeFontPadding="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/module_textsize_14sp" />


    <TextView
        android:id="@+id/tv_user_phone"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_mine_enter_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginRight="9dp"
        android:textColor="@color/text_color_blur"
        android:textSize="@dimen/module_textsize_14sp"/>


    <ImageView
        android:id="@+id/iv_mine_enter_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/icon_mine_enter_mark" />

</RelativeLayout>
