<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.roid.com/apk/res-auto"
    android:id="@+id/rl_user_info"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <com.gcssloop.widget.RCImageView
        android:id="@+id/iv_user_icon"
        app:round_as_circle="true"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_luncher"
        />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_user_icon"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/iv_user_icon"
        android:text="会员昵称"
        android:textColor="@color/text_color"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_user_rank"
        android:layout_below="@+id/tv_user_name"
        android:layout_toRightOf="@+id/iv_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LV1"
        />


    <TextView
        android:layout_below="@+id/tv_user_name"
        android:layout_toRightOf="@+id/tv_user_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="粉丝"
        />


    <ImageView

        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_arrow_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/qrcode_sample"
        />


    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/iv_arrow_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_right_arrow_textcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>