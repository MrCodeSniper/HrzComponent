<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey">
    <LinearLayout
        android:id="@+id/ll_above_all_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_height"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@color/bg_grey">

            <LinearLayout
                android:background="@drawable/gradient_main_color"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.mujirenben.android.common.widget.StatusBarView
                    android:id="@+id/status_bar_view"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/rl_mine_padding_layout"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_alignParentTop="true"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/mine_main_setting_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="设置"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <RelativeLayout
                    android:id="@+id/fl_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal">

                    <com.gcssloop.widget.RCImageView
                        android:id="@+id/iv_user_icon"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/iv_user_default_icon"
                        app:round_as_circle="true" />

                    <TextView
                        android:id="@+id/tv_user_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/gray_golden_round_bg"
                        android:gravity="center"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:text="     "
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fl_user_info"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/iv_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/mine_user_rightarrow" />


                <ImageView
                    android:id="@+id/iv_user_qrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="2dp"
                    android:paddingEnd="2dp"
                    android:layout_toLeftOf="@id/iv_arrow_right"
                    android:src="@drawable/mine_user_qrcode"

                    />

            </RelativeLayout>
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60.5dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <RelativeLayout
                    android:id="@+id/rl_vip_level_up"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/mine_userinfo_card_style"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_card_icon_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_crown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@id/iv_card_icon_first"
                        android:text="会员升级"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_hrz_academy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/mine_userinfo_card_style"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/iv_card_icon_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mine_hrz_academy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@id/iv_card_icon_second"
                        android:text="红人装学院"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/mine_userinfo_card_style"
            android:paddingBottom="28dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="33dp">

            <TextView
                android:id="@+id/tv_accumulate_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计收益"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_accumulate_reward"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/tv_accumulate_reward"
                android:text="去除用户退货订单的真实收益"
                android:textColor="@color/text_color_blur"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_hide_or_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_accumulate_reward"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_eyes"
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="3.5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/eyes_selector" />

                <TextView
                    android:id="@+id/tv_hide_or_show_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_accumulate_reward"
                    android:text="隐藏"
                    android:textColor="@color/text_color_blur"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_accumulate_reward_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_accumulate_reward"
                android:layout_marginTop="16.5dp"
                android:text="--"
                android:textColor="@color/text_color"
                android:textSize="@dimen/module_textsize_21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_reward_into_account_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_accumulate_reward_amount"
                android:layout_marginTop="20dp"
                android:text="今日入账: --"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_withdraw_goods_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_accumulate_reward_amount"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tv_reward_into_account_today"
                android:text="退货金额: --"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_predict_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_reward_into_account_today"
                android:layout_marginTop="31dp"
                android:text="预计收益"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_predict_reward"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/tv_predict_reward"
                android:text="未入账的收益"
                android:textColor="@color/text_color_blur"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/rl_predict_reward_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_predict_reward"
                android:layout_marginTop="16.5dp">
                <TextView
                    android:id="@+id/tv_predict_reward_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/module_textsize_21sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_enter_predict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_enter_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@id/iv_enter_predict"
                    android:text="查看收益明细"
                    android:textColor="@color/text_color_blur"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:id="@+id/divide_bar"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/rl_predict_reward_amount"
                android:layout_marginTop="28dp"
                android:background="@color/module_divide_color" />

            <RelativeLayout
                android:id="@+id/rl_withdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divide_bar"
                android:layout_marginTop="27dp">

                <TextView
                    android:id="@+id/tv_withdraw_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可提现：--"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_enter_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_enter_grey"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@id/iv_enter_withdraw"
                    android:text="去提现"
                    android:textColor="@color/text_color_blur"
                    android:textSize="12sp" />

            </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:focusable="false"
            android:id="@+id/ll_about_deals"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_below="@id/rl_reward"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/mine_userinfo_card_style"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_all_deals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_all_orders" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="全部订单"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_deal_success"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_user_deal_success" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="交易成功"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_deal_close"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_setting_guanbi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="交易结算"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_deal_invalid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_user_deal_invalid" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="交易失效"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/mine_userinfo_card_style"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:focusable="false"
                android:id="@+id/rv_other_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>