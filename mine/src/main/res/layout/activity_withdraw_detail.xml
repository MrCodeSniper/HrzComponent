<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <ScrollView
      android:layout_width="match_parent"
      android:scrollbars="none"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">
          <include layout="@layout/common_titlebar"/>
          <include layout="@layout/mine_include_settings_divider"/>
          <TextView
              android:layout_marginTop="18dp"
              android:layout_marginLeft="12dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="提现账号信息"
              android:textStyle="bold"
              android:textColor="#ff333333"
              android:textSize="16sp"
              />
          <TextView
              android:layout_marginTop="10dp"
              android:layout_marginLeft="12dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="*为保证您的财产安全，请使用本人的提现账号"
              android:textColor="#FF929292"
              android:textSize="12sp"/>

          <LinearLayout
              android:layout_marginTop="22dp"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:id="@+id/withdraw_alipay_ll"
                  android:background="@drawable/withdraw_recommend_bg"
                  android:layout_marginLeft="12dp"
                  android:layout_marginRight="5.5dp"
                  android:layout_weight="1"
                  android:gravity="center_horizontal"
                  android:layout_gravity="center"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="41dp">
                  <ImageView
                      android:layout_gravity="center"
                      android:layout_width="20dp"
                      android:layout_marginRight="8dp"
                      android:layout_centerVertical="true"
                      android:layout_height="20dp"
                      android:src="@drawable/icon_alipay" />
                  <TextView
                      android:id="@+id/withdraw_alipay_tv"
                      android:layout_gravity="center"
                      android:layout_width="wrap_content"
                      android:text="@string/mine_withdraw_deposit_alipay"
                      android:layout_alignTop="@+id/iv_discount"
                      android:layout_toRightOf="@+id/iv_discount"
                      android:textColor="@color/text_color"
                      android:textSize="16sp"
                      android:layout_height="wrap_content" />
                  <TextView
                      android:layout_marginTop="10dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="8dp"
                      android:layout_toRightOf="@+id/tv_discount"
                      android:background="@drawable/round_bubble_bg"
                      android:paddingBottom="0.5dp"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                      android:paddingTop="0.5dp"
                      android:text="推荐"
                      android:textColor="@color/white"
                      android:textSize="10sp" />

              </LinearLayout>

              <LinearLayout
                  android:id="@+id/withdraw_wxpay_ll"
                  android:layout_marginRight="12dp"
                  android:layout_marginLeft="5.5dp"
                  android:layout_weight="1"
                  android:gravity="center_horizontal"
                  android:layout_gravity="center"
                  android:orientation="horizontal"
                  android:background="@drawable/withdraw_round_border_bg"
                  android:layout_width="match_parent"
                  android:layout_height="41dp">

                  <ImageView
                      android:layout_gravity="center"
                      android:id="@+id/iv_award"
                      android:layout_width="20dp"
                      android:layout_marginLeft="12dp"
                      android:layout_marginRight="8dp"
                      android:layout_centerVertical="true"
                      android:layout_height="20dp"
                      android:src="@drawable/icon_wechat_pay"/>

                  <TextView
                      android:layout_gravity="center"
                      android:id="@+id/withdraw_wxpay_tv"
                      android:layout_width="wrap_content"
                      android:text="@string/mine_withdraw_deposit_wx"
                      android:layout_alignTop="@+id/iv_award"
                      android:layout_toRightOf="@+id/iv_award"
                      android:textColor="@color/text_color_blur"
                      android:textSize="16sp"
                      android:layout_height="wrap_content" />

              </LinearLayout>
          </LinearLayout>
          <LinearLayout
              android:layout_marginTop="8dp"
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="44dp">
              <TextView
                  android:layout_gravity="center_vertical"
                  android:id="@+id/tv_alipay_account"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/module_textsize_14sp"
                  android:textColor="@color/text_color"
                  android:text="@string/mine_withdraw_deposit_alipay_account"
                  android:layout_marginLeft="12dp"
                  android:layout_marginRight="12dp"/>
              <EditText
                  android:id="@+id/et_alipay_account"
                  android:layout_gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@."
                  android:textColorHint="@color/text_color_blur"
                  android:textColor="@color/text_color"
                  android:textSize="@dimen/module_textsize_14sp"
                  android:hint="@string/mine_withdraw_deposit_alipay_account_hint"/>
          </LinearLayout>
          <include layout="@layout/mine_include_settings_divider"/>
          <LinearLayout
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="44dp">
              <TextView
                  android:layout_gravity="center_vertical"
                  android:id="@+id/tv_alipay_account_name"
                  android:layout_width="70dp"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/module_textsize_14sp"
                  android:textColor="@color/text_color"
                  android:text="@string/mine_withdraw_deposit_alipay_account_name"
                  android:layout_marginLeft="12dp"
                  android:layout_marginRight="12dp"/>
              <EditText
                  android:id="@+id/et_alipay_realname"
                  android:layout_gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:textColorHint="@color/text_color_blur"
                  android:textColor="@color/text_color"
                  android:textSize="@dimen/module_textsize_14sp"
                  android:hint="@string/mine_withdraw_deposit_alipay_account_name_hint"/>
          </LinearLayout>
          <View
              android:layout_width="match_parent"
              android:background="#fff4f4f4"
              android:layout_height="8dp"/>
          <TextView
              android:layout_marginTop="19dp"
              android:layout_marginLeft="12dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="身份证信息"
              android:textStyle="bold"
              android:textColor="#ff333333"
              android:textSize="16sp"
              />
          <TextView
              android:layout_marginTop="12dp"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="*由于国家规定，您需要提交正确的身份证号码才能提现哦！"
              android:textColor="#FF929292"
              android:textSize="12sp"
              />
          <TextView
              android:background="#FFFEF7F7"
              android:textSize="12sp"
              android:lineSpacingExtra="2dp"
              android:padding="12dp"
              android:textColor="@color/main_color"
              android:layout_marginTop="8dp"
              android:layout_marginLeft="12dp"
              android:text="每次验证须扣0.15元查询费（从可提现金额中扣除），请检查号码和姓名匹配后再提交。验证结果由公安局提供，真实有效。"
              android:layout_marginRight="12dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              />

          <LinearLayout
              android:layout_marginTop="12dp"
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="44dp">
              <TextView
                  android:layout_gravity="center_vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/module_textsize_14sp"
                  android:textColor="@color/text_color"
                  android:text="身份证号码"
                  android:singleLine="true"
                  android:layout_marginLeft="12dp"
                  android:layout_marginRight="12dp"/>
              <EditText
                  android:id="@+id/et_idcard_number"
                  android:layout_gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:maxLength="18"
                  android:textColorHint="@color/text_color_blur"
                  android:textColor="@color/text_color"
                  android:textSize="@dimen/module_textsize_14sp"
                  android:hint="@string/mine_withdraw_deposit_idnumber_hint"/>
          </LinearLayout>
          <include layout="@layout/mine_include_settings_divider"/>
      </LinearLayout>
  </ScrollView>
  <TextView
        android:layout_gravity="bottom"
        android:id="@+id/withdraw_save_tv"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_height="44dp"
        android:text="@string/withdraw_save_info_text"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/tv_withdraw_selector"
        />
</FrameLayout>