<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:orientation="vertical">

    <com.gcssloop.widget.RCImageView
        android:id="@+id/iv_icon"
        android:layout_margin="12dp"
        app:stroke_color="#FFFFFFFF"
        app:stroke_width="0.5dp"
        android:layout_width="28dp"
        android:layout_height="28dp" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_xiaofei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/tv_fu"
        android:layout_toRightOf="@+id/iv_icon"
        android:text="xx的消费收益"
        android:textColor="#ff333333"
        android:textSize="16sp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_fu"
        android:text="￥"
        android:textSize="12sp"
        android:textColor="#ED4143"
        android:layout_alignBottom="@+id/tv_fanmoney"
        android:layout_marginBottom="3dp"
        android:layout_toLeftOf="@+id/tv_fanmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_fanmoney"
        android:layout_marginRight="12sp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="88"
        android:textColor="#ED4143"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/origin"
        android:layout_below="@+id/iv_icon"
        android:text="来源:淘宝"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#B2B2B2"
        android:textSize="12sp" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/createTime"
        android:text="创建时间:2018:3288"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/origin"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:textColor="#B2B2B2"
        android:textSize="12sp" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/endTime"
        android:text="到账时间:2018:3288"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/createTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#B2B2B2"
        android:textSize="12sp" />
    <android.support.v7.widget.AppCompatTextView
    android:id="@+id/tv_tuihuo"
    android:text="由于用户退货，无法获得该笔收益"
    android:layout_width="wrap_content"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:layout_below="@+id/endTime"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="12dp"
    android:textColor="#ED4143"
    android:textSize="12sp" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_weiquan"
        android:visibility="gone"
        android:text="由于用户维权，延期结算"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endTime"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="12dp"
        android:textColor="#ED4143"
        android:textSize="12sp" />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/already"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:src="@drawable/hrz_activity_ruzhang"
        android:layout_marginRight="8dp"
        android:layout_alignBottom="@+id/endTime"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/usertuihuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/status"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv_tuihuo"
        android:background="@drawable/hrz_activity_gray_shape"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="4dp"
        android:text="用户退货"
        android:textColor="@color/white"
        android:textSize="11sp" />
     <android.support.v7.widget.AppCompatTextView
         android:id="@+id/userweiquan"
         android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_toRightOf="@+id/status"
    android:layout_marginRight="12dp"
    android:layout_alignParentRight="true"
    android:layout_alignBottom="@+id/tv_weiquan"
    android:background="@drawable/hrz_activity_gray_shape"
    android:gravity="center"
    android:paddingBottom="4dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="4dp"
    android:text="维权订单"
    android:textColor="@color/white"
    android:textSize="11sp" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_dianpu"
        android:layout_width="wrap_content"

        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:drawableLeft="@drawable/hrz_activity_profit_libao"
        android:paddingTop="2dp"
        android:drawablePadding="10dp"
        android:paddingBottom="2dp"
        android:layout_below="@+id/endTime"
        android:background="@drawable/mine_profit_color_shape"
        android:text="店铺服务费5%奖励"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/notsettle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/status"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/endTime"
        android:background="@drawable/showdialog"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="4dp"
        android:text="未入账"
        android:textColor="@color/white"
        android:textSize="11sp" />
</RelativeLayout>