<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#F8F8F8"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:gravity="center_vertical">




    <ImageView

        android:id="@+id/order_item_product_icon_iv"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="#ececec"/>

    <TextView
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/module_textsize_14sp"
        android:textColor="@color/text_color"
        android:text="店铺名称"
        android:id="@+id/mine_order_shop_tv"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_arrow_right"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_right_arrow_textcolor"
        />


    <LinearLayout
        android:id="@+id/ll_mine_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/order_list_item_activity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/activity_name_bg_round"
                android:text="拼团"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:paddingRight="3dp"
                android:paddingEnd="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/white"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/order_list_item_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff333333"
                android:textSize="13sp"
                android:singleLine="true"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">
            <TextView
                android:id="@+id/order_list_item_spec_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉色"
                android:textColor="#ffb2b2b2"
                android:textSize="11sp"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_list_item_real_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥45.00"
                android:textColor="#ffed4143"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/order_list_item_ori_price_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="￥135.90"
                android:textColor="#ffb2b2b2"
                android:textSize="11sp"
                />

            <TextView
                android:id="@+id/order_list_item_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textColor="#ffb2b2b2"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>